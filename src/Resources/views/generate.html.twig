<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Url shortener Generator{% endblock %}</title>
        <link rel="shortcut icon" href="{{ asset('build/images/Burger King Favicon.png') }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>

    <body>
        
        <form  method="post">
            <input type="hidden" name="_token" value="{{ csrf_token }}">

            <div>
               <h2> Paste the URL to be shortened</h2>
            </div>
            <div>
                <input type="text" name="original">
                <button type="submit">Shorten URL</button>
            </div>
        </form>

        {% if url.shortcode|default(false) %}
            <div>
                <span>Original : {{ url.original }}</span>
                <span>Shorted  : {{ include('@UrlShortener/short-url.html.twig', {code: url.shortCode}) }} </span>
            </div>
        {% endif %}

    </body>
</html>
